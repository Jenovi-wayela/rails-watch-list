<h1>New Bookmark for <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, collection: Movie.all.order(:title), prompt: 'Select a Movie' %>
  <%= f.input :comment, label: 'Comment', required: true, minlength: 6 %>
    <%# <%= f.input :photo, as: :file %>
  <%= f.button :submit, 'Add Movie', class: 'btn btn-success'  %>

<% end %>
<br>
<div>
<%= link_to 'Back to List', list_path(@list), class: 'btn btn-primary'  %>

</div>
