<h1>New Bookmark for <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |form| %>
  <%= form.input :movie_id, collection: @movies, label: 'Select a Movie' %>
  <%= form.input :comment, label: 'Comment' %>

  <%= form.button :submit, 'Create Bookmark' %>
<% end %>

<%= link_to 'Back to List', list_path(@list) %>
